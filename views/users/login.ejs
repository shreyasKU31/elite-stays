<% layout("layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form
      class="createForm needs-validation"
      action="/login"
      method="POST"
      novalidate
    >
      <div class="form-group">
        <label for="username">Username:</label>
        <input
          name="username"
          type="text"
          class="form-control"
          id="username"
          required
        />
        <div class="valid-feedback">Looks Good!!!</div>
        <div class="invalid-feedback">Please give Username.</div>
      </div>
      <div class="form-group">
        <label for="password">Enter your Password:</label>
        <input
          name="password"
          type="password"
          class="form-control"
          id="password"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
