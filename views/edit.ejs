<% layout("layouts/boilerplate.ejs") %>
<body>
  <form
    class="createForm needs-validation"
    novalidate
    action="/listings/<%= editList.id %>?_method=PUT"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <label for="validationCustom01" class="form-label">Title:</label>
      <input
        class="form-control"
        type="text"
        name="title"
        id="validationCustom01"
        value="<%= editList.title %>"
        required
      />

      <div class="invalid-feedback">Please write the Title.</div>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Discription:</label>
      <input
        type="text"
        name="discription"
        id="formGroupExampleInput2"
        required
        value="<%= editList.discription %>"
        class="form-control"
      />
      <div class="invalid-feedback">Please Discribe the listing.</div>
    </div>
    <div>
      <p>Original Image</p>
      <img src="<%= originalImageUrl %>" alt="" />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput3">Upload Listing Image:</label>
      <input
        name="image"
        type="file"
        class="form-control"
        id="formGroupExampleInput3"
      />
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">Please upload the image of Listing.</div>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput4">Price:</label>
      <input
        class="form-control"
        placeholder="Enter Price"
        type="number"
        name="price"
        id="formGroupExampleInput4"
        required
        value="<%= editList.price %>"
      />
      <div class="invalid-feedback">Select Price</div>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput5">Location:</label>
      <input
        name="location"
        type="text"
        class="form-control"
        id="formGroupExampleInput5"
        placeholder="Enter City Name"
        value="<%= editList.location %>"
      />
      <div class="invalid-feedback">Please Write Location.</div>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput6">Country:</label>
      <input
        name="country"
        type="text"
        class="form-control"
        id="formGroupExampleInput6"
        placeholder="Enter Country"
        value="<%= editList.country %>"
      />
      <div class="invalid-feedback">Please write the Country.</div>
    </div>
    <button type="submit" class="createBtn">Edit List</button>
  </form>
</body>
